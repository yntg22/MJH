	<form>
	<!-- autofocus ==> 화면에 이름적는곳에 커서가 깜빡임  -->
	<label for="name">이름</label>
		<input autofocus="autofocus" id="name" size="15" type="text" name="name"><br>
		
		<!-- readonly ==> 읽기만 가능함 -->
	<label for="id">아이디</label>
		<input readonly="readonly" value="korea" id="id" size="15" type="text" name="id"><br>
	</form>
</body>
</html>