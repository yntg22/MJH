<script>
	$(function(){
		//확인버튼 클릭하면 똑같은 버튼을 만들어서 result에 추가한다
// 		$('.btn').bind('click', function(){ })
		$('.btn').on('click', function(){
			$('<input>',{
				'type' : 'button',
				'value' : '확인',
				'class' : 'btn'
			}).appendTo($('#result1'));
		})
	})
</script>
</head>
