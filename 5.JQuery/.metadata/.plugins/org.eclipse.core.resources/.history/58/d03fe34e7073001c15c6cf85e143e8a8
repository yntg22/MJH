<script>
	$(function(){
		
		$('#btn1').on('click',function(){
			//각 요소의 상태 값을 가져온다
			chk = $('#checkTest').prop('checked');
			sel = $('#selTest option').eq(0).prop('selected');
			
			text = $('#txtTest').prop('readonly');
			
			btn = $('#runBtn').prop('disabled');
			
			console.log(chk, sel, text, btn);
			
		})
		
		$('#btn2').on('click', function(){
			//현재의 각 요소의 상태값을 반대로 설정
			$('#checkTest').prop('checked', !$('#checkTest').prop('checked'));
			$('#selTest option').eq(2).prop('selected', !$('#selTest option').eq(0).prop('selected'));
			
			$('#txtTest').prop('readonly', !$('#txtTest').prop('readonly'));
			$('#runBtn').prop('disabled',!$('#runBtn').prop('disabled'));
		})
		
	})
</script>
</head>
<body>

<div class="box">
	<h3></h3>
