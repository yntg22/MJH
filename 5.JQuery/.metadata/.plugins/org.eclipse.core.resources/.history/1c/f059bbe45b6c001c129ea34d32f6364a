<script>
str = "우리 나라 대한 민국 I Love Korea 우리 나라";

proc1 = () => {
	vchar = str.indexOf(3);
	vcode = str.charCodeAt(3);
	
	res = str + "<br>";
	res += "str.indexOf(3) : " + vchar + "<br>";
	res += "str.charCodeAt(3)" + vcode + +"<br>";
}


</script>


