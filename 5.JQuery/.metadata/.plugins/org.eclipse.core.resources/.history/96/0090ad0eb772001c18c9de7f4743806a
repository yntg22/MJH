<script>
$(function(){
	$('p').on('mouseover',function(){
// 		$(this).css('background','yellow');	
		$(this).addClass('bcolor');
	})
	
	$('p').on('mouseout',function(){
// 		$(this).css('background','white');
		$(this).removeClass('bcolor');
	})
	
})
</script>

<style>
	.bcolor{
		background : yellow;
	}
