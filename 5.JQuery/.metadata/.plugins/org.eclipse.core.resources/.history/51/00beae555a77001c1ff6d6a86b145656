<script>
$(function(){
	$('#btn1').on('click', function(){
		
		$.ajax({
			url : 'buyerNames.jsp',
			type : 'get',
			success : function(res){
				
				code = "";
				$.each(res,function(i){
				
// 				code += '<p>',{
// 						 'id' : res[i].id,
// 						 'text' : res[i].name
// 					}
				
					
					code += "<p id='" + res[i].id + "'>" + res[i].name + "</p>";
				})
				$('#bnames').html(code);
			},
			error : function(xhr, err){
				alert("상태 : " + xhr.status + 
						"\ntext : " + xhr.statusText + 
						"\nmessage : " + arr.reponseText);
			},
			dataType : 'json'
		})
	})
	
	$('#bnames').on('click', 'p', function(){
// 		alert($(this).attr('id'));
		idvalue = $(this).attr('id');
		
		$.ajax({
			url : 'detailById.jsp',
			type : 'get',
			data : { "id" : idvalue},
			dataType : 'json',
			success : function(res){
				code = "<table border='1'";
				code += "<tr>";
				code += "<td>BUYER_ID</td>";
				code += "<td>" + res.id + "</td>";
				code += "</tr>";
				
				code += "<tr>";
				code += "<td>BUYER_NAME</td>";
				code += "<td>" + res.name + "</td>";
				code += "</tr>";
				
				code += "<tr>";
				code += "<td>BUYER_MAIL</td>";
				code += "<td>" + res.mail + "</td>";
				code += "</tr>";
				
				code += "<tr>";
				code += "<td>BUYER_ADD1</td>";
				code += "<td>" + res.add1 + "</td>";
				code += "</tr>";
				
				code += "<tr>";
				code += "<td>BUYER_ADD2</td>";
				code += "<td>" + res.add2 + "</td>";
				code += "</tr>";
				
				code += "<tr>";
				code += "<td>BUYER_LGU</td>";
				code += "<td>" + res.lgu + "</td>";
				code += "</tr>";
				
				code += "<tr>";
				code += "<td>BUYER_BANKNO</td>";
				code += "<td>" + res.bankno + "</td>";
				code += "</tr>";
				
				code += "<tr>";
				code += "<td>BUYER_BANKNAME</td>";
				code += "<td>" + res.bankname + "</td>";
				code += "</tr>";
				
				
			},
			error : function(xhr){
				alert("상태 : " + xhr.status + 
						"\ntext : " + xhr.statusText);
			}
			
		})
	})
	
})
</script>

